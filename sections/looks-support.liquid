<!-- looks-support.liquid -->

<div class="looks-support looks-{{ page.handle }}">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
          <div class="icon-block"> 
            {% assign image = block.settings.image %}
            {% if image != blank %}
              <img class="icon-img" 
                src="{{ image | img_url:'' }}"
                preload="true"
              {% if forloop.index != 1 %}
                {% else %}
                loading="lazy"
                {% endif %}
                width="{{ image.width }}"
                height="{{ image.height }}"
                >
            {% endif %}
            {% if block.settings.icon != blank %}
              <span class="icon-img">{{ block.settings.icon }}</span>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h5>{{ block.settings.heading }}</h5>
            {% endif %}
            {% if block.settings.content != blank %}
              <div class="text11">{{ block.settings.content }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Support Section",
  "settings": [],
  "blocks":[
    {
      "type":"svg",
      "name":"SVG & text",
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image Icon",
          "info":"You can add here image icon"
        },
        {
          "type":"textarea",
          "id":"icon",
          "label":"Icon SVG",
          "info":"Add here your Svg code of icons"
        },
        {
          "type":"text",
          "id":"heading",
          "label":"Heading"
        },
        {
          "type":"richtext",
          "id":"content",
          "label":"Content"
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Support Section"
    }
  ]
}
{% endschema %}

