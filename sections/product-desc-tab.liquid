<div class="container">
  <div class="product-tabbing">
    <ul class="nav nav-tabs" role="tablist">
      {% if section.settings.enable_tab1 %}
        {% if section.settings.tab1 != blank %}
          <li class="nav-item">
            <a class="nav-link active" id="tab-1-{{ section.id }}" data-toggle="tab" href="#tabs-1" role="tab">
              {{- section.settings.tab1 -}}
            </a>
          </li>
        {% endif %}
      {% endif %}
      {% if section.settings.enable_tab2 %}
        {% if section.settings.tab2 != blank %}
          <li class="nav-item">
            <a class="nav-link" id="tab-2-{{ section.id }}" data-toggle="tab" href="#tabs-2" role="tab">
              {{- section.settings.tab2 -}}
            </a>
          </li>
        {% endif %}
      {% endif %}
      {% if section.settings.enable_tab3 %}
        {% if section.settings.tab3 != blank %}
          <li class="nav-item">
            <a class="nav-link" id="tab-3-{{ section.id }}" data-toggle="tab" href="#tabs-3" role="tab">
              {{- section.settings.tab3 -}}
            </a>
          </li>
        {% endif %}
      {% endif %}
    </ul>

    <div class="tab-content">
      {% if section.settings.enable_tab1 %}
        {% if section.settings.tab1 != blank %}
          <div class="tab-pane active" id="tabs-1" role="tabpanel">
            {{ product.description }}
          </div>
        {% endif %}
      {% endif %}
      {% if section.settings.enable_tab2 %}
        {% if section.settings.tab2 != blank %}
          <div class="tab-pane" id="tabs-2" role="tabpanel">
            <span>
              {{ section.settings.content_tab2 }}
            </span>
          </div>
        {% endif %}
      {% endif %}
      {% if section.settings.enable_tab3 %}
        {% if section.settings.tab3 != blank %}
          <div class="tab-pane" id="tabs-3" role="tabpanel">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {% render block %}
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

